<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <title>Administration</title>
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
  <header>
    <h1>Admin</h1>
    <nav>
      <a href="/logout">Déconnexion</a>
    </nav>
  </header>
  <main>
    <section>
      <h2>Messages reçus</h2>
      <% if (messages.length === 0) { %>
        <p>Aucun message</p>
      <% } %>
      <ul>
        <% messages.forEach(m => { %>
          <li><strong><%= m.name %></strong> (<%= m.email %>): <%= m.message %></li>
        <% }) %>
      </ul>
    </section>
    <section>
      <h2>Clients</h2>
      <ul>
        <% Object.keys(users).forEach(u => {
             if (u !== 'photographer') { %>
          <li><%= u %> - <%= users[u].photos.length %> photos</li>
        <% }}); %>
      </ul>
    </section>
  </main>
</body>
</html>
